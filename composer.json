{
    "name": "justbetter/statamic-detour",
    "description": "Statamic addon for redirects.",
    "require": {
        "statamic/cms": "^5.0",
        "laravel/framework": "^12.0",
        "php": "^8.3"
    },
    "require-dev": {
        "larastan/larastan": "^3.4",
        "laravel/pint": "^1.22",
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.7",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "JustBetter\\Detour\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustBetter\\Detour\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Statamic Detour",
            "description": "Statamic addon for redirects."
        },
        "laravel": {
            "providers": [
                "JustBetter\\Detour\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan --memory-limit=1G",
        "style": "pint --test",
        "coverage": "XDEBUG_MODE=coverage php vendor/bin/pest --coverage --min=93",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ]
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    }
}